# Client Configuration  
# Copy this file to .env and fill in your values

# Your unique credentials (required)
USER_ID=your_unique_user_id_here
REMOTE_API_KEY=lb_your_api_key_here

# Server connection
REMOTE_SERVER=ws://146.190.120.44:8767/tunnel

# Local MCP server (default is correct for LocalBrain)
LOCAL_MCP_SERVER=http://127.0.0.1:8766

# Connection settings (optional)
PING_INTERVAL=30              # Send ping every 30 seconds
RECONNECT_DELAY=5            # Wait 5 seconds before reconnecting
MAX_RECONNECT_ATTEMPTS=10    # Stop after 10 failed attempts

# To generate credentials:
# USER_ID: python3 -c "import uuid; print(str(uuid.uuid4()))"
# API_KEY: python3 -c "import secrets; print('lb_' + secrets.token_urlsafe(32))"
