# LocalBrain MCP Server Configuration
# Copy this to .env and fill in your values

# ============================================================================
# Required Configuration
# ============================================================================

# Path to LocalBrain vault directory
VAULT_PATH=~/test-vault

# ============================================================================
# Optional: Database Configuration (Legacy - Not Used in Proxy Mode)
# ============================================================================
# NOTE: The MCP server acts as a proxy to the daemon backend.
# The daemon handles all database connections, so these settings are not required.

# ChromaDB Cloud credentials (optional - daemon handles DB connections)
# CHROMA_API_KEY=your_chroma_api_key_here
# CHROMA_TENANT=default-tenant
# CHROMA_DATABASE=default-database
# CHROMA_COLLECTION=localbrain_chunks

# SentenceTransformer model name (optional - daemon handles embeddings)
# EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ============================================================================
# Server Configuration
# ============================================================================

# Server host and port
MCP_HOST=127.0.0.1
MCP_PORT=8765

# CORS allowed origins (comma-separated)
MCP_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Request timeout in seconds
MCP_TIMEOUT=30

# ============================================================================
# Tool Configuration
# ============================================================================

# Default number of search results
MCP_SEARCH_TOP_K=10

# Enable result caching
MCP_CACHE_ENABLED=true

# Cache TTL in seconds
MCP_CACHE_TTL=300

# ============================================================================
# Authentication & Rate Limiting
# ============================================================================

# Path to client authentication config
MCP_AUTH_CONFIG=~/.localbrain/mcp/clients.json

# Default API key for development (insecure, change in production)
MCP_API_KEY=dev-key-local-only

# Enable rate limiting
MCP_RATE_LIMIT_ENABLED=true

# Default rate limit (requests per hour)
MCP_RATE_LIMIT=100

# ============================================================================
# Audit Logging
# ============================================================================

# Enable audit logging
MCP_AUDIT_ENABLED=true

# Audit log directory
MCP_LOG_DIR=~/.localbrain/logs/mcp

# Maximum days to retain audit logs
MCP_AUDIT_DAYS=90
